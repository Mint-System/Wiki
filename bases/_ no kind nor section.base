views:
  - type: table
    name: Table
    filters:
      and:
        - file.ext == "md"
        - or:
            - kind.isEmpty()
            - section.isEmpty()
        - '!file.name.endsWith("excalidraw")'
    order:
      - file.name
      - kind
      - section
      - file.tags
      - lang
    sort:
      - property: kind
        direction: DESC
    columnSize:
      file.name: 610
